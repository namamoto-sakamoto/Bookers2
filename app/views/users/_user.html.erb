<!--左側の画面-->
<h2>User info</h2>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image, size: "100x100" %>
  <% else %>
   <%= image_tag 'default-image.jpeg', size: "100x100" %>
  <% end %>
  <table class="table">
  <tr>
   <th>name</th>
   <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  </table>

   <%= link_to edit_user_path(user.id), class: "btn btn-outline-dark btn-block" do %>
     <i class="fas fa-user-cog"></i>
   <% end %>



