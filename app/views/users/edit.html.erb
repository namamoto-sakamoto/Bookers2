<div class="container">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this book from being saved: %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-xl-3"></div>
    <div class="text-left col-xl-6">
      <!--プロフィール編集画面-->
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_field :introduction, autofocus: true, id:"NoImtroduction" %><br>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
